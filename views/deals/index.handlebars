<h1>Your Deals</h1>


<table class="table">
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Amount</th>
        <th scope="col">Stage</th>
        <th scope="col">Contact(s)</th>

    </tr>
    {{#each deals}}
    <tr>
        <td scope="row"><a href="/deals/{{id}}"> {{name}}</a></td>
        <td>${{amount}}</td>
        <td>{{status}}</td>
        <td>
            {{#each Contacts}}
            <a href="/contacts/{{id}}">{{firstName}} {{lastName}}</a>
            <p>{{email}}</p>
            <p>{{phone}}</p>
            {{/each}}
        </td>
    </tr>
    {{/each}}
</table>


<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    + Deal
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Deal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/deals/create" method="POST">
                <div class="modal-body">
                    <div class="form-row align-items-center">
                        <input type="text" name="name" class="form-control" id="name" placeholder="Name"><br>
                        <div class="col-auto my-1">
                            <label class="mr-sm-2" for="inlineFormCustomSelect">Preference</label>
                            <select class="custom-select mr-sm-2" name="status" id="inlineFormCustomSelect">
                                <option value="Closed Lost" class="dropdown-item">Closed Lost</option>
                                <option value="Discovery" class="dropdown-item">Discovery</option>
                                <option value="Initial Meeting" class="dropdown-item">Initial Meeting</option>
                                <option value="Demo" class="dropdown-item">Demo</option>
                                <option value="Contract Sent" class="dropdown-item">Contract Sent</option>
                                <option value="Closed Won" class="dropdown-item">Closed Won</option>
                            </select>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            <input type="text" class="form-control" name="amount" aria-label="Amount (to the nearest dollar)">
                        </div>
                        <input type="submit" class="form-control btn-primary">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>